<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation"> <!--En lugar de navbar-inverse usar navbar-default para los colores default -->
        @*<div class="container">*@
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".mimenu"> <!--data-toggle con la clase collapse indica que debe mantenerse invisible hasta que el menu requiere collapsarse,  data-target usa un selector jquery por default -->
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @*<a class="navbar-brand" href="@Url.Action("Index", "Home")">Application name</a>*@ <!-- Este es otro ejemplo de link usando UrlHelper en lugar de HtmlHelper. Es importante dejar que MVC compile las URL por nosotros -->
            </div>
            <div class="navbar-collapse collapse mimenu"> <!-- mimenu se usa en el botón de arriba, pero por default se usa navbar-collapse -->
                <ul class="nav navbar-nav">
                    <!-- nav-pills en lugar de navbar-nav para mostrar pildoras -->
                    <li class="active"><a href="@Url.Action("Index", "Home")" class="navbar-brand">Home</a></li>
                    <li class="dropdown">
                        <a href="@Url.Action("About", "Home")" class="dropdown-toggle" data-toggle="dropdown">Ejemplos knockout <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Basic", "Home")">Ej. Basico</a></li>
                            <li><a href="@Url.Action("Advanced", "Home")">Ej. Avanzado</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Index", "Autores")">Autores</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="@Url.Action("Contact", "Home")" class="dropdown-toggle" data-toggle="dropdown">Contacto <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">Por Mail</a></li>
                            <li><a href="#">Por E-mail</a></li>
                        </ul>
                    </li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                <form class="navbar-form navbar-right" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Buscar" />
                    </div>
                    <button type="submit" class="btn btn-default">Buscar</button>
                </form>
            </div>
        @*</div>*@
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/knockout-3.4.0.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
